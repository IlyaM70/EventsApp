@model EventViewModel
@{
    ViewData["Title"] = $"{Model.Name}";
}
<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-primary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Name</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-3 fw-semibold btn-sm text-uppercase">
                            <small>На главную</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row pl-2 my-3">
                            <p class="lh-sm">@Html.Raw(Model.Description)</p>
                            <p class="lh-sm">@Model.Address</p>
                            <partial name="_EventDates" model="Model" />
                            <partial name="_EventGenderRestriction" model="Model" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>


